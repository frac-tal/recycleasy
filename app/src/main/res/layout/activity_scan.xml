<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanActivity"
    >

    <ImageView
        android:id="@+id/barcode_image"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_name"
        app:layout_constraintTop_toBottomOf="@id/barcode_image"
        android:layout_margin="16dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Adelholzener naturell - 0,5 l"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sub_name"
        app:layout_constraintTop_toBottomOf="@id/product_name"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        tools:text="Natürliches Mineralwasser, ohne Kohlensäure"
        android:textStyle="italic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brand"
        app:layout_constraintTop_toBottomOf="@id/sub_name"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        tools:text="Adelholzener"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/packaging_materials"
        app:layout_constraintTop_toBottomOf="@id/brand"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        tools:text="Kunststoff, Mehrwegpfand"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/packaging_materials"
        android:background="@android:color/holo_green_dark"
        android:orientation="vertical"
        android:layout_marginVertical="16dp"
        android:id="@+id/answer_color"
        >

        <TextView
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Biotonne"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:textSize="32sp"
            android:layout_margin="16dp"
            android:textStyle="bold"
            />
    </LinearLayout>
    
</android.support.constraint.ConstraintLayout>